<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ear.evaluaciolab.Datos_Estudiante">

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textColorHint="@android:color/holo_blue_dark"
        android:textColorLink="@android:color/holo_blue_dark" />

    <EditText
        android:id="@+id/txtCodig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText6"
        android:layout_marginTop="10dp"
        android:hint="CÃ³digo"
        android:singleLine="true"
        android:textColorHint="@android:color/holo_blue_dark"
        android:textColorLink="@android:color/holo_blue_dark" />

    <EditText
        android:id="@+id/txtMateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText5"
        android:layout_marginTop="22dp"
        android:hint="Materia"
        android:singleLine="true"
        android:textColorHint="@android:color/holo_blue_dark"
        android:textColorLink="@android:color/holo_blue_dark" />

    <EditText
        android:id="@+id/txtPrimerParcial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="22dp"
        android:hint="Primer Parcial : 30%"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textColorHint="@android:color/holo_blue_dark"
        android:textColorLink="@android:color/holo_blue_dark" />

    <EditText
        android:id="@+id/txtSegundoParcial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Segundo Parcial : 30%"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textColorHint="@android:color/holo_blue_dark"
        android:textColorLink="@android:color/holo_blue_dark" />

    <EditText
        android:id="@+id/txtTercerParcial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtNombre"
        android:layout_marginTop="19dp"
        android:hint="Tercer Parcial : 40%"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textColorHint="@android:color/holo_blue_dark"
        android:textColorLink="@android:color/holo_blue_dark" />

    <Button
        android:id="@+id/btnProcesar"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="@string/btnGuardar"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textSize="18dp" />
</LinearLayout>
